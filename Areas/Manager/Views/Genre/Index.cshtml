@model IEnumerable<Genre>

@{
    ViewData["Title"] = " | Manage Genres";
}

<h1 class="mb-2">Manage Genres</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Manager">Add a Genre</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr><th>GenreId</th><th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Genre genre in Model)
        {
            <tr>
                <td>@genre.GenreId</td>
                <td>@genre.Name</td>
                <td>
                    <a asp-action="ViewBooks" asp-area="Manager" asp-route-id="@genre.GenreId"
                        class="btn btn-primary">View Books</a>
                    <a asp-action="Edit" asp-area="Manager" asp-route-id="@genre.GenreId"
                        class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-area="Manager" asp-route-id="@genre.GenreId"
                        class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



