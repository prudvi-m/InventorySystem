@model CartViewModel

@{
    ViewData["Title"] = " | Cart";

    // create culture variable
    var culture = System.Globalization.CultureInfo
        .CreateSpecificCulture("en-US");
}

<h1>Your Cart</h1>

<form asp-action="Clear" method="post">
    <ul class="list-group mb-4">
        <li class="list-group-item">
            <div class="row">
                <div class="col">
                    Subtotal: @Model.Subtotal.ToString("c", culture)
                </div>
                <div class="col">
                    <div class="float-right">
                        <a asp-action="Checkout" class="btn btn-primary">Checkout</a>
                        <button type="submit" class="btn btn-primary">Clear Cart</button>
                        <a asp-action="List" asp-controller="Product"
                           asp-all-route-data="@Model.BookGridRoute">Back to Shopping</a>
                    </div>
                    
                </div>
            </div>
        </li>
    </ul>
</form>
<form asp-action="Remove" method="post">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Category(s)</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartItem item in Model.List)  {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Product"
                           asp-route-id="@item.Product.BookId"
                           asp-route-slug="@item.Product.Title.Slug()">
                            @item.Product.Title
                        </a>
                    </td>
                    <td>
                        @foreach (var keyValuePair in item.Product.Categories) {
                            <p>
                                <a asp-action="Details" asp-controller="Category"
                                   asp-route-id="@keyValuePair.Key"
                                   asp-route-slug="@keyValuePair.Value.Slug()">
                                    @keyValuePair.Value
                                </a>
                            </p>
                        }
                    </td>
                    <td>@item.Product.Price.ToString("c", culture)</td>
                    <td>@item.Quantity</td>
                    <td>@item.Subtotal.ToString("c", culture)</td>
                    <td>
                        <div class="float-right">
                            <a asp-action="Edit" asp-controller="Cart"
                               asp-route-id="@item.Product.BookId"
                               asp-route-slug="@item.Product.Title.Slug()"
                               class="btn btn-primary">Edit</a>
                            <button type="submit" name="id" value="@item.Product.BookId"
                                    class="btn btn-primary">Remove</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>